@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Dubno.Models.Post>

<div class="container">
    <br />
    <br />
    <br />
    <div class="row">

        @foreach (var post in Model)
        {

            @if (post.Approved == true && post.Pending == false)
            {


                <div class="col-md-4">
                    <div class="post">
                        <div class="pi-img-wrapper">
                            <img src="@post.ImageName" class="img-responsive">
                        </div>
                        <h4>
                            @Html.ActionLink((string)post.Title, "Details", new { id = post.PostId })
                        </h4>

                        <h5>@post.Name</h5>
                        <h5>@post.Description</h5>
                        <h5>@post.City, @post.State</h5>
                    </div>
                </div>
            }

        }


    
                <div class="row return-details"></div>


    </div>
</div>
