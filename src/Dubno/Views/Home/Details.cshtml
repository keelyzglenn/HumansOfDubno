
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model Dubno.Models.Post

<div class="col-md-2"></div>
<div class="col-md-8">
    <div class="card">
        <img src="@Html.DisplayFor(model => model.ImageName)" style="width:100%">
        <div class="card-block">
            <h3 class="card-title text-center">@Html.DisplayFor(model => model.Title)</h3>
            <h3 class="card-title text-center">@Html.DisplayFor(model => model.Name)</h3>
            <h3 class="card-title text-center">@Html.DisplayFor(model => model.Description)</h3>
            </div>
        @*<a href="/Products/Details/@ViewBag.NextID">Previous</a>*@
        <a href="/Products/Details/@ViewBag.NextID">Next</a>

    </div>
</div>
