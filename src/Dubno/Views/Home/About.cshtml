        <div class="newsletter">
            <h4 class="title">Subscribe to People of Dubno for email updates about new posts and access to our Newsletter</h4>

            @model Dubno.Models.Subscriber

            <div class="col-md-6 col-md-offset-3">
                @using (Html.BeginForm(new { @class = "form-horizontal" }))
                {
                    <div class="form-group">
                        <label class="col-md-3 control-label">Email</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Email, new { data_bind = "value: youremail@gmail.com", @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />

                    <div class="form-group">
                        <label class="col-md-3 control-label">First Name</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.FirstName, new { data_bind = "value: First Name", @class = "form-control" })
                        </div>
                    </div>

                    <br />
                    <br />
                    <div class="form-group">
                        <label class="col-md-3 control-label">Last Name</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.LastName, new { data_bind = "value: Last Name", @class = "form-control" })
                        </div>
                    </div>

                    <br />
                    <br />
                    <div class="form-group">
                        <label class="col-md-1 control-label"></label>
                        <div class="col-md-6">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>

</div>
